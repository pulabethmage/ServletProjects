<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="5.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	
	<servlet>
	<servlet-name>myservlet</servlet-name>
	<servlet-class>com.appbrewery.MyServlet</servlet-class>
	
	<init-param>
	<param-name>name</param-name>
	<param-value>Pulasthi</param-value>
	</init-param>
	
	</servlet>
	
	<servlet-mapping>
	<servlet-name>myservlet</servlet-name>
	<url-pattern>/home</url-pattern>
	</servlet-mapping>
	
	<context-param>
	<param-name>packagename</param-name>
	<param-value>Appbrewery</param-value>
	</context-param>
	
	<context-param>
	<param-name>tools</param-name>
	<param-value>Eclipes</param-value>
	</context-param>
	
</web-app>
